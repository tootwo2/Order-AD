<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="afterDescendants"
    >
    <ImageView android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:layout_margin="5dp"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">
            <TableRow>
                <TextView android:id="@+id/goodsNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="产品号"
                    android:textSize="17dp" />


                <TextView android:id="@+id/modelNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="款号"
                    android:textSize="18dp" />

                <TextView android:id="@+id/supportStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="支持类型"
                    android:textSize="17dp" />

                <TextView android:id="@+id/eastLaunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="上市日期"
                    android:textSize="17dp" />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/modelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="产品品名"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />
                <TextView android:id="@+id/custome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=""
                    android:textSize="17dp" />
                <TextView android:id="@+id/localRp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="牌价"
                    android:textSize="17dp" />
                <TextView android:id="@+id/directoryPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="目录页码"
                    android:textSize="17dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:id="@+id/flowLayout_detail">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:imeOptions="actionDone"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:selectAllOnFocus="true"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>