<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    >


    <ImageView android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        />

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/goodsNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="产品号"
                    android:textSize="17dp" />


                <TextView android:id="@+id/supportStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="支持类型"
                    android:textSize="17dp" />

                <TextView android:id="@+id/eastLaunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="上市日期"
                    android:textSize="17dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/modelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="产品品名"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp" />
                <TextView android:id="@+id/custome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="精英买手建议"
                    android:textSize="17dp" />
                <TextView android:id="@+id/localRp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="牌价"
                    android:textSize="17dp" />
                <TextView android:id="@+id/directoryPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#FFFF00FF"
                    android:text="目录页码"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
            <com.topsports.tootwo2.widget.customRadio.CheckboxGroup
                android:id="@+id/checkboxGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <CheckBox
                    android:id="@+id/checkbox_X"
                    style="@style/rb_style"
                    android:text="X" />
                <CheckBox
                    android:id="@+id/checkbox_A"
                    style="@style/rb_style"
                    android:text="A" />

                <CheckBox
                    android:id="@+id/checkbox_B"
                    style="@style/rb_style"
                    android:text="B" />

                <CheckBox
                    android:id="@+id/checkbox_C"
                    style="@style/rb_style"
                    android:text="C"
                    />
                <CheckBox
                    android:id="@+id/checkbox_D"
                    style="@style/rb_style"
                    android:text="D"
                    />
            </com.topsports.tootwo2.widget.customRadio.CheckboxGroup>
            <com.topsports.tootwo2.widget.customRadio.CheckboxGroup
                android:id="@+id/checkboxGroup_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_weight="5">
                <CheckBox
                    android:id="@+id/checkbox_plus"
                    style="@style/rb_style"
                    android:text="+" />

                <CheckBox
                    android:id="@+id/checkbox_minus"
                    style="@style/rb_style"
                    android:text="-" />

            </com.topsports.tootwo2.widget.customRadio.CheckboxGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.topsports.tootwo2.widget.tagview.TagListView
                xmlns:f="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tagView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_margin"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:paddingTop="16.0dip"
                f:horizontalSpacing="@dimen/tag_horizontal_spacing"
                f:orientation="horizontal"
                f:verticalSpacing="@dimen/tag_vertical_spacing" >

            </com.topsports.tootwo2.widget.tagview.TagListView>
            <Button
                android:id="@+id/addtag"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="添加"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>